{
  "name": "@neonloom/plex",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "Standalone Plex multiplexer toolkit extracted from NeonLoom core.",
  "license": "MIT",
  "exports": {
    ".": "./index.js",
    "./channel": "./channel.js",
    "./config": "./config.js",
    "./duplex": "./duplex.js",
    "./peer": "./peer.js",
    "./pool": "./pool.js",
    "./rpc": "./rpc.js",
    "./service": "./service.js",
    "./ws": "./ws/index.js",
    "./ws/index": "./ws/index.js",
    "./ws/WebSocketStream": "./ws/WebSocketStream.js",
    "./ws/isWebSocket": "./ws/isWebSocket.js",
    "./ws/symbol": "./ws/symbol.js",
    "./dev/pair": "./dev/pair.js",
    "./dev/broker": "./dev/broker.js",
    "./protocol/store": "./protocol/store.js",
    "./codec": "./codec/index.js",
    "./bytes": "./bytes/index.js",
    "./result": "./result/index.js",
    "./log": "./log/index.js",
    "./env": "./env/index.js",
    "./browser": "./browser/index.js",
    "./browser/index": "./browser/index.js"
  },
  "files": [
    "*.js",
    "dev/**/*.js",
    "ws/**/*.js",
    "protocol/**/*.js",
    "codec/**/*.js",
    "bytes/**/*.js",
    "result/**/*.js",
    "log/**/*.js",
    "env/**/*.js",
    "browser/**/*.js",
    "platform/**/*.js",
    "test/**/*.js",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "test": "brittle test/*.brittle.test.js",
    "smoke": "npm run smoke:tcp && npm run smoke:ws",
    "smoke:tcp": "node dev/smoke-tcp.js",
    "smoke:ws": "node dev/smoke-ws.js",
    "build:browser": "rollup -c"
  },
  "types": "./types/index.d.ts",
  "dependencies": {
    "b4a": "^1.6.7",
    "compact-encoding": "^2.16.1",
    "duplex-through": "^1.0.2",
    "framed-stream": "^1.0.1",
    "protomux": "^3.10.1",
    "streamx": "^2.22.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "brittle": "^3.18.6",
    "rollup": "^4.52.5",
    "ws": "^8.18.0"
  }
}
