{
  "name": "@neonloom/plex",
  "version": "0.1.6",
  "private": false,
  "type": "module",
  "description": "Standalone Plex multiplexer toolkit extracted from NeonLoom core.",
  "license": "MIT",
  "homepage": "https://github.com/zacharygriffee/neonplex",
  "exports": {
    ".": "./index.js",
    "./channel": "./channel.js",
    "./config": "./config.js",
    "./duplex": "./duplex.js",
    "./peer": "./peer.js",
    "./pool": "./pool.js",
    "./rpc": "./rpc.js",
    "./service": "./service.js",
    "./ws": "./ws/index.js",
    "./ws/index": "./ws/index.js",
    "./ws/WebSocketStream": "./ws/WebSocketStream.js",
    "./ws/isWebSocket": "./ws/isWebSocket.js",
    "./ws/symbol": "./ws/symbol.js",
    "./dev/pair": "./dev/pair.js",
    "./dev/broker": "./dev/broker.js",
    "./protocol/store": "./protocol/store.js",
    "./codec": "./codec/index.js",
    "./bytes": "./bytes/index.js",
    "./result": "./result/index.js",
    "./log": "./log/index.js",
    "./env": "./env/index.js"
  },
  "imports": {
    "fs": {
      "bare": "bare-fs"
    },
    "fs/promises": {
      "bare": "bare-fs/promises"
    },
    "path": {
      "bare": "bare-path"
    },
    "process": {
      "bare": "bare-process"
    },
    "process/global": {
      "bare": "bare-process/global"
    }
  },
  "files": [
    "*.js",
    "dev/**/*.js",
    "ws/**/*.js",
    "protocol/**/*.js",
    "codec/**/*.js",
    "bytes/**/*.js",
    "result/**/*.js",
    "log/**/*.js",
    "env/**/*.js",
    "platform/**/*.js",
    "test/**/*.js",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "check:bare": "node scripts/enforce/check-bare-imports.mjs",
    "test": "npm run check:bare && brittle test/*.brittle.test.js",
    "test:bare": "npx --yes bare test/plex.brittle.test.js && npx --yes bare test/pool.brittle.test.js && npx --yes bare test/pool-policy.brittle.test.js && npx --yes bare test/rpc.brittle.test.js",
    "smoke": "npm run smoke:tcp && npm run smoke:ws",
    "smoke:tcp": "node dev/smoke-tcp.js",
    "smoke:ws": "node dev/smoke-ws.js"
  },
  "types": "./types/index.d.ts",
  "dependencies": {
    "bare-fs": "^4.5.0",
    "bare-path": "^3.0.0",
    "bare-process": "^4.2.2",
    "b4a": "^1.6.7",
    "compact-encoding": "^2.16.1",
    "duplex-through": "^1.0.2",
    "eventemitter3": "^5.0.1",
    "framed-stream": "^1.0.1",
    "protomux": "^3.10.1",
    "streamx": "^2.22.1"
  },
  "devDependencies": {
    "brittle": "^3.18.6",
    "ws": "^8.18.0"
  }
}
